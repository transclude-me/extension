{
	"name": "Transclude Me",
	"version": "0.1.0",
	"description": "Bring transclusion to the web",
	"homepage_url": "https://github.com/transclude-me/extension",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "transclude-me@stvad",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "resources/logo.svg"
	},
	"browser_action": {
	    "default_icon": "resources/logo.svg",
	    "default_title": "Transclude Me"
	},
	"permissions": [
       "<all_urls>",
		"storage"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [ "content.ts" ],
		    "css": [ "content-imports.css" ],
			"run_at": "document_end"
		}
 	],
	"options_ui": {
		"chrome_style": true,
		"page": "options/options.html"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background.ts"
		]
	}
}
